<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC0CB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvPaymentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="20dp" />

        <!-- Detail Pembelian Pulsa -->
        <TextView
            android:id="@+id/tvPurchasedPulsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pulsa Rp10.000 - Rp12.000"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="10dp" />

        <!-- Detail Pembelian Kuota -->
        <TextView
            android:id="@+id/tvPurchasedKuota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kuota 2GB - Rp20.000"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="10dp" />

        <!-- Total Pembelian -->
        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: Rp32.000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="20dp" />

        <!-- Metode Pembayaran -->
        <TextView
            android:id="@+id/tvPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Metode Pembayaran"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <!-- Tombol Pembayaran E-wallet -->
        <Button
            android:id="@+id/btnEWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-wallet"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp" />

        <!-- Tombol Pembayaran Transfer -->
        <Button
            android:id="@+id/btnTransfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transfer"
            android:background="#FF4500"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp" />

        <!-- Input Detail Pembayaran (jika dibutuhkan) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/etPaymentDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Nomor E-wallet/Rekening"
                android:inputType="text" />

        </LinearLayout>

        <!-- Konfirmasi Pembayaran -->
        <Button
            android:id="@+id/btnConfirmPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konfirmasi Pembayaran"
            android:background="#3F51B5"
            android:textColor="#FFFFFF" />

        <!-- Bantuan Pembayaran -->
        <TextView
            android:id="@+id/tvPaymentHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jika ada masalah, hubungi kami di: support@gamehub.com"
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>
