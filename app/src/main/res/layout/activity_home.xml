<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC0CB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, User!"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/tvUserBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saldo: Rp. 150,000"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/tvUserNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor : 081234567890"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="20dp" />

        <!-- Banner Promo Section -->
        <ImageView
            android:id="@+id/ivBanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/Banner"
            android:contentDescription="Promo Banner"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp"/>

        <!-- Daftar Pulsa -->
        <TextView
            android:id="@+id/tvPulsaTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Pulsa"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pulsa Rp10.000 - Rp12.000"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pulsa Rp25.000 - Rp27.000"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pulsa Rp50.000 - Rp52.000"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Daftar Kuota -->
        <TextView
            android:id="@+id/tvKuotaTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Kuota"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kuota 2GB - Rp20.000"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kuota 5GB - Rp50.000"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kuota 10GB - Rp100.000"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Popular Packages Section -->
        <TextView
            android:id="@+id/tvPopularPackages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paket Populer"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnPopularPulsa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pulsa Rp10.000"
                android:background="#FF4500"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnPopularKuota"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kuota 5GB"
                android:background="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Footer with Contact Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hubungi Kami: 123-456-789"
                android:textSize="14sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
